<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mainBG"
    android:orientation="vertical"
    android:theme="@style/AppTheme.NoActionBar"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="bottom"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="@drawable/lower_shadow"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="수질 등급"
        android:textStyle="bold"
        android:paddingLeft="16dp"
        android:paddingTop="9.7dp"
        android:textSize="15sp"
        android:lineSpacingExtra="-5sp"
        android:textColor="@color/textBlack"

        />
    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_marginLeft="16dp"-->
        <!--android:layout_marginRight="16dp"-->
        <!--card_view:cardBackgroundColor="@android:color/white"-->
        <!--app:cardCornerRadius="10dp"-->
        <!--app:cardElevation="5dp">-->
        <LinearLayout
            android:background="@drawable/shadow1"
            android:id="@+id/water_grade_layout"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="8dp"
            android:layout_width="match_parent"
            android:layout_height="155dp">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/water_grade_img"
                    android:layout_width="43dp"
                    android:layout_height="43dp" />

                <TextView
                    android:id="@+id/water_grade_name"
                    android:layout_marginTop="8.3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11.7sp"
                    android:textColor="@color/waterRankA"
                    android:lineSpacingExtra="4.3sp"
                    android:textStyle="bold"
                    android:text="@string/water_rank_a"
                    />

            </LinearLayout>
            <TextView
                android:id="@+id/water_grade_desc"
                android:layout_width="match_parent"
                android:gravity="center"
                android:padding="13dp"
                android:layout_weight="1"
                android:layout_height="match_parent" android:textSize="8.3sp"
                android:textColor="@color/textBlack2"
                android:lineSpacingExtra="7.7sp"
                android:text="@string/water_rank_a_desc"/>

        </LinearLayout>
    <!--</android.support.v7.widget.CardView>-->

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수질 개선 정보"
            android:textStyle="bold"
            android:paddingLeft="16dp"
            android:paddingTop="5dp"
            android:paddingBottom="7.7dp"
            android:textSize="15sp"
            android:lineSpacingExtra="-5sp"
            android:layout_weight="1"
            android:textColor="@color/textBlack"
            />
        <ImageView
            android:id="@+id/help"
            android:layout_marginTop="7dp"
            android:adjustViewBounds="true"
            android:background="@drawable/info"
            android:layout_marginRight="16.7dp"
            android:layout_width="17.3dp"
            android:layout_height="17.3dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/water_info_layout"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/shadow2"
            android:id="@+id/water_info_layout_child1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            android:layout_height="93.3dp">
            <ImageView
                android:id="@+id/water_link_img"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/link"
                android:layout_width="25.3dp"
                android:layout_height="25.3dp" />
            <TextView
                android:id="@+id/water_link_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.3sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/textBlack2"
                android:text="@string/water_link"/>

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/shadow2"
            android:id="@+id/water_info_layout_child2"
            android:orientation="vertical"
            android:layout_weight="1"
            android:paddingTop="8dp"
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="93.3dp">

            <ImageView
                android:id="@+id/water_phone_img"
                android:layout_marginTop="15dp"
                android:adjustViewBounds="true"
                android:background="@drawable/call"
                android:layout_width="25.3dp"
                android:layout_height="25.3dp" />
            <TextView
                android:id="@+id/water_phone_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="8.3sp"
                android:lineSpacingExtra="7.7sp"
                android:layout_marginTop="7dp"
                android:textColor="@color/textBlack2"
                android:text="@string/water_phone"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/location_layout"
        android:orientation="horizontal"
        android:layout_weight="10"
        android:gravity="bottom"
        android:layout_marginBottom="16.7dp"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:background="@drawable/shadow3"
            android:id="@+id/user_location_layout"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_weight="7"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_height="75dp">

            <TextView
                android:text="소속지역"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textStyle="bold"
                android:textColor="@color/textBlack"
                android:lineSpacingExtra="-3.3sp"/>
            <TextView
                android:id="@+id/user_location"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:textColor="@color/textBlack2"
                android:lineSpacingExtra="-1.7sp"
                android:text="음오아예"/>

        </LinearLayout>


        <LinearLayout
            android:background="@drawable/shadow4"
            android:id="@+id/peri_location_layout"
            android:orientation="vertical"
            android:layout_weight="4"
            android:paddingLeft="15dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="75dp">

            <TextView
                android:text="정수장위치"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13.3sp"
                android:textColor="@color/textBlack"
                android:lineSpacingExtra="-3.3sp"/>
            <TextView
                android:id="@+id/peri_location"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="11.7sp"
                android:textColor="@color/textBlack2"
                android:lineSpacingExtra="-1.7sp"
                android:text="예아" />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>